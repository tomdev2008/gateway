		<aop:pointcut id="serviceMethodPointForShopping"
					  expression="(execution(* com.yoho.*.*.service.*.*(..))) or (execution(* com.yoho.*.*.restapi.*.*(..))) or (execution(* com.yoho.core.redis.YH*Operations.*(..))) or (execution(* com.yoho.yhorder.order.payment.*.*.*(..))) or (execution(* com.yoho.yhorder.shopping.charge.*.*(..)))
					  or (execution(* com.yoho.yhorder.shopping.charge.caculator.*.*(..))) or (execution(* com.yoho.yhorder.shopping.union.*.*(..))) or (execution(* com.yoho.yhorder.shopping.cache.*.*(..)))"/>
		<aop:advisor pointcut-ref="serviceMethodPointForShopping" advice-ref="serviceMethodInterceptor"/>
	</aop:config>
	<!-- -->
	<task:executor id="executor" pool-size="5" />  
	<task:scheduler id="scheduler" pool-size="10" />  
	<task:annotation-driven executor="executor" scheduler="scheduler" />

</beans>